<div class="container user_content">
  <h2 class="user_title title_border"><%= @user.name %>さんのプロフィール</h2>
  <div class="row">
    <div class="col-md-4">
      <% if @user.image.present? %>
        <%= image_tag @user.image.variant(resize: '300x300'), class: 'eyecatch user_img' %>
      <% else %>
        <%= image_tag "/images/default.jpeg", class: 'eyecatch user_img' %>
      <% end %>
    </div>
    <div class="col-md-8">
      <table class="detail_table">
      <tbody>
        <tr>
          <th class="detail_user">名前</th>
          <td class="detail_value"><%= @user.name %></td>
        </tr>
        <tr>
          <th class="detail_user">プロフィール文</th>
          <% if @user.profile.present? %>
            <td class="detail_value"><%= @user.profile %></td>
          <% else %>
            <td class="detail_value">　</td>
          <% end %>
        </tr>
        <tr>
          <th class="detail_user">Twitterアカウント</th>
          <% if @user.twitter.present? %>
            <td class="detail_value"><%= link_to @user.twitter, "#{@user.twitter}", target: :blank %></td>
          <% else %>
            <td class="detail_value">　</td>
          <% end %>
        </tr>
          <th class="detail_user">GitHubアカウント</th>
          <% if @user.qiita.present? %>
            <td class="detail_value"><%= link_to @user.qiita, "#{@user.qiita}", target: :blank %></td>
          <% else %>
            <td class="detail_value">　</td>
          <% end %>
        </tr>
        <tr>
          <th class="detail_user">出身スクール</th>
          <% if @user.school_id.present? %>
            <td class="detail_value"><%= @user.school.name %></td>
          <% else %>
            <td class="detail_value">　</td>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>

<% if current_user.id == @user.id %>
  <div class="container">
    <div class="row">
      <div class="col-6 col-offset-6 text-center user-edit-btn">
        <%= link_to 'ユーザ情報を編集する', edit_user_registration_path, class: "btn btn-success btn-lg" %>
      </div>
    </div>
  </div>
<% end %>

<div class="container app_contents">
  <h2 class="apps_title title_border"><%= @user.name %>さんが開発したアプリ(<%= @apps.count %>)</h2>
  <ul class="app_lists">
    <%= render @apps %>
  </ul>
</div>
