<div class="container user_content">
  <h2 class="user_title title_border"><%= @name %>さんのプロフィール</h2>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @user.image.variant(resize: '300x300'), class: 'eyecatch user_img'  %>
    </div>
    <div class="col-md-8">
      <table class="detail_table">
      <tbody>
        <tr>
          <th class="detail_user">名前</th>
          <td class="detail_value"><%= @user.name %></td>
        </tr>
        <tr>
          <th class="detail_user">出身スクール</th>
          <td class="detail_value"><%= @user.school.name %></td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>

<div class="container app_contents">
  <h2 class="apps_title title_border"><%= @name %>さんが開発したアプリ(<%= @apps.count %>)</h2>
  <ul class="app_lists">
    <% @apps.each do |app| %>
    <li class="list">
      <%= link_to app_path(app) do %>
        <div class="app_content">
          <div class="card section">
            <div class="eyecatch_container app_img_content">
            <%= link_to image_tag(app.image, class: 'eyecatch app_img' ), app_path(app.id), method: :get %>
            </div>
            <div class="main_container">
              <div class="timeline_header">
                <h3 class="title">
                  <%= link_to app.name, app_path(app) %>
                </h3>
                <p class="body">
                  <%= truncate(app.description)%>
                </p>
                <p class="body">
                <span class="reference">アプリURL：</span>
                  <%= link_to "#{app.reference}", app.reference, target: :_blank %>
                </p>
                <div class="layout column meta_container">
                  <div class0="layout meta_items">
                    <div class="language_container">
                      <span class="language">開発言語：</span><%= app.language %>
                      <span class="sen"></span>
                      <span class="period">開発期間：</span><%= app.period %> 日
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>
