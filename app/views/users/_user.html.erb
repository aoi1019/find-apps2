<li class="user-list">
  <div class="user-icon-area">
    <% if user.image.present? %>
      <%= link_to image_tag(user.image, class: 'user-icon'), user_path(user) %>
    <% else %>
      <%= link_to image_tag("/images/default.jpeg", class: 'user-icon'), user_path(user.id) %>
    <% end %>
  </div>
  <div class="user-name-area">
    <%= link_to user.name, user_path(user), class: 'user-name' %>
  </div>
</li>