<%= form_with model: @user, url: new_user_session_path,  class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        ログイン
      </h1>
    </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
    </div>
    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-blue-btn" %>
    </div>
    <span class="or-line or-border">
      または
    </span>
    <div class="sns-btn">
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'google-btn btn' do %>
        <span><i class="fab fa-google fa-lg google-icon"></i>　Googleでログイン</span>
      <% end %>
      <%= link_to user_facebook_omniauth_authorize_path, method: :post, class: 'facebook-btn btn' do %>
        <span><i class="fab fa-lg fa-facebook-square"></i>　Facebookでログイン</span>
      <% end %>
    </div>
    <div class="registration-link text-center">
      <%= link_to "新規登録はこちら", new_user_registration_path %>
    </div>
  </div>
<% end %>