<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      プロフィール編集
    </h1>
  </div>

  <%= render 'layouts/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名前</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name, class:"input-default", id:"nickname", placeholder:"例) 山田太郎", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">プロフィール画像</label>
      <span class="dispensable">任意</span>
    </div>
    <%= f.file_field :image, accept: 'image/jpeg,image/png', class: 'input-default', id: 'apps_text' %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">自己紹介文（200文字以内）</label>
      <span class="dispensable">任意</span>
    </div>
    <%= f.text_area :profile, class:"user-text user-description", id:"nickname", placeholder:"ここに自己紹介文を書きましょう...", maxlength:"200", rows:"7" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Twitterアカウント</label>
      <span class="dispensable">任意</span>
    </div>
    <%= f.text_area :twitter, class:"input-default", id:"nickname", placeholder:"例) https://twitter.com/", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class="form">
      <div class="weight-bold-text">
        通っているスクール
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:school_id, School.all, :id, :name, {}, {class:"select-box", id:"school-id"}) %>
    </div>
  </div>

  <div class='register-btn'>
    <%= f.submit "更新" ,class:"register-blue-btn" %>
  </div>
</div>
<% end %>